<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact</title>
    <!-- @include 'fonts.kit'-->
    <!-- @include 'styles.kit'-->
</head>

<body class="contact-subpage">

    <!-- @include 'button.kit'-->
    <!-- @include 'nav.kit'-->
    <!-- @include 'header.kit'-->

    <section id="contact" class="contact section-padding section white-section">
        <div class="wrapper">
            <h2 class="section-heading">Kontakt</h2>
            <form class="contact__form">
                <h3 class="contact__form-heading">Napisz do nas!</h3>
                <div class="contact__form-top">
                    <label for="name" class="contact__form-label">Imię i nazwisko</label>
                    <input type="text" class="contact__form-input" id="name">
                    <label for="email" class="contact__form-label">Adres email:</label>
                    <input type="text" class="contact__form-input" id="email">
                </div>

                <label for="msg" class="contact__form-label">Wiadomość:</label>
                <textarea id="msg" class="contact__form-textarea"></textarea>

                <button type="submit" class="contact__form-btn btn-special-animation">Wyślij</button>
            </form>

            <div class="contact__details">
                <h3 class="contact__details-heading">Dane kotaktowe</h3>
                <p class="contact__details-adress">adres</p>
                <p>ul. Jasnogórska 2</p>
                <p>31-358 Kraków</p>
                <p class="contact__details-adress">telefon</p>
                <p>+48 000 000 000</p>
                <p class="contact__details-adress">mail</p>
                <p>jakiestam@costam.com</p>
            </div>

            <div class="contact__map">
                <h3 class="contact__map-heading">Mapa dojazdu</h3>
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2559.8171878014837!2d19.89118056391791!3d50.08970951166793!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165a326d015c3b%3A0x47a12cd367a1f34e!2sRestauracja%20McDonald&#39;s!5e0!3m2!1spl!2spl!4v1711980474635!5m2!1spl!2spl"
                    width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </section>



    <!-- @include 'footer.kit'-->

    <script src="dist/js/main.min.js"></script>
</body>

</html>